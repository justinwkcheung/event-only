<h3>This Event</h3>

<div class="event">
  <h3>Event: <%= @event.name %></h3>
  <%= @event.date %><br />
  <%= @event.capacity %><br />
  <%= link_to 'Edit', edit_location_event_url(@location, @event) %> | <%= link_to 'Delete', location_event_url(@location, @event), method: :delete, data: {confirm: "Are you sure you want to delete the event '#{@event.name}'? This cannot be undone." } %>
</div>
